{
  "listeners": {
    "*:80": {
      "pass": "routes"
    }
  },

  "routes": [
    {
      "match": {
        "uri": [
          "!*/.well-known/*",
          "/vendor/*",
          "/core/profiles/demo_umami/modules/demo_umami_content/default_content/*",
          "*.engine",
          "*.inc",
          "*.install",
          "*.make",
          "*.module",
          "*.po",
          "*.profile",
          "*.sh",
          "*.theme",
          "*.tpl",
          "*.twig",
          "*.xtmpl",
          "*.yml",
          "*/.*",
          "*/Entries*",
          "*/Repository",
          "*/Root",
          "*/Tag",
          "*/Template",
          "*/composer.json",
          "*/composer.lock",
          "*/web.config",
          "*sql",
          "*.bak",
          "*.orig",
          "*.save",
          "*.swo",
          "*.swp",
          "*~"
        ]
      },

      "action": {
        "return": 404
      }
    },
    {
      "match": {
        "uri": [
          "/core/authorize.php",
          "/core/core.api.php",
          "/core/globals.api.php",
          "/core/install.php",
          "/core/modules/statistics/statistics.php",
          "~^/core/modules/system/tests/https?\\.php",
          "/core/rebuild.php",
          "/update.php"
        ]
      },

      "action": {
        "pass": "applications/drupal/direct"
      }
    },
    {
      "match": {
        "uri": [
          "!/index.php*",
          "*.php"
        ]
      },

      "action": {
        "return": 404
      }
    },
    {
      "action": {
        "share": "/opt/drupal/web$uri",
        "fallback": {
          "pass": "applications/drupal/index"
        }
      }
    }
  ],

  "applications": {
    "drupal": {
      "type": "php",
      "targets": {
        "direct": {
          "root": "/opt/drupal/web/"
        },

        "index": {
          "root": "/opt/drupal/web/",
          "script": "index.php"
        }
      }
    }
  }
}
